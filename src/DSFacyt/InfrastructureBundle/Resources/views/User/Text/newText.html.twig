{% extends "base.html.twig" %}

{% block stylesheets %}

    {% stylesheets
    '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/stylesheets/screen.css'
    '@DSFacytInfrastructureBundle/Resources/public/assets/vendor/css/metisMenu/metisMenu.css'
    '@DSFacytInfrastructureBundle/Resources/public/assets/vendor/css/startbootstrap-sb-admin-2/timeline.css'
    '@DSFacytInfrastructureBundle/Resources/public/assets/vendor/css/startbootstrap-sb-admin-2/sb-admin-2.css'

    filter='?yui_css'  %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

    {% endstylesheets %}

{% endblock %}

{% block body %}
    {% include 'DSFacytInfrastructureBundle:User:header.html.twig' %}

    <div ng-app="TextModule" ng-controller="TextController" id="page-wrapper" style="min-height: 311px;">
        <div class="row">
            <div class="col-xs-12 ">
                <h1 class="page-header ">  <span class="fa fa-pencil"></span> Publicar texto</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-10 col-xs-offset-1">
                <div class="panel panel-default">
                    <div class="panel-heading">Ingresa los datos de la publicaci√≥n</div>

                    <div class="panel-body">
                        {{ form_start(form ,{attr: {novalidate: 'novalidate'}}) }}
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1">
                                {{ form_errors(form.title) }}
                                {{ form_label(form.title, null, {'label_attr': {'class': 'control-label'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control '}}) }}
                                <br>
                            </div>

                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="row">
                                    <div class="col-xs-4">
                                        {{ form_errors(form.publish_time) }}
                                        {{ form_label(form.publish_time, null, {'label_attr': {'class': 'control-label'}}) }}
                                        {{ form_widget(form.publish_time, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-xs-4">
                                        {{ form_errors(form.start_date) }}
                                        {{ form_label(form.start_date, null, {'label_attr': {'class': 'control-label'}}) }}
                                        {{ form_widget(form.start_date, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                    <div class="col-xs-4">
                                        {{ form_errors(form.end_date) }}
                                        {{ form_label(form.end_date, null, {'label_attr': {'class': 'control-label'}}) }}
                                        {{ form_widget(form.end_date, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-10 col-xs-offset-1" id="register_text_checkbox">
                                <br>
                                {{ form_errors(form.Channels) }}
                                {{ form_label(form.Channels,  null, {'label_attr': {'class': 'foo'}}) }}
                                {{ form_widget(form.Channels, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="col-xs-10 col-xs-offset-1">
                                    {{ form_errors(form.info) }}
                                    {{ form_label(form.info,  null, {'label_attr': {'class': 'foo'}}) }}
                                    {{ form_widget(form.info, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="form-group ">
                                    <div class="control-label required">&nbsp;</div>
                                    <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block btn-sm" >Publicar</button>
                                </div>
                            </div>

                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>


{% endblock %}

{% block javascripts%}
    <!-- Tomando variables enviadas desde el servidor -->

    {% if app.environment == "dev" %}

        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/bootstrap.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/metisMenu.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/sb-admin-2.js') }}"></script>
    {% else %}
        {% javascripts
        '@DSFacytInfrastructureBundle/Resources/public/assets/vendor/js/jquery.js'
        '@DSFacytInfrastructureBundle/Resources/public/assets/vendor/js/bootstrap.js'
        '@DSFacytInfrastructureBundle/Resources/public/assets/vendor/js/metisMenu.js'
        '@DSFacytInfrastructureBundle/Resources/public/assets/vendor/js/sb-admin-2.js'


        filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>

        {% endjavascripts %}
    {% endif %}
{% endblock %}