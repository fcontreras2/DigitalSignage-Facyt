{% extends "base.html.twig" %}

{% block stylesheets %}
    {% if app.environment == "dev" %}
        <link rel="stylesheet" href="{{ asset('bundles/dsfacytinfrastructure/assets/DSFacyt/stylesheets/screen.css') }}"/>
    {% else %}

        {% stylesheets '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/css/screen.css'   %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

        {% endstylesheets %}    
    {% endif %}
{% endblock %}

{% block body %}
{% include 'DSFacytInfrastructureBundle:Default:header.html.twig' %}
    
    <div style="background-image:url('{{asset("images/home.jpg")}}');margin-top:60px;height:100vh;width:100%;background-size:cover">   
    </div>
    <div id="home-channels">
        {% for i in 1..4 %}
            {% if loop.index is divisible by(2) %}
                <div class="container-triangle">        
                </div>
            {% else %}
                <div class="container-triangle2">
                </div>
            {% endif %}
            {% if loop.index == 1 %}
                <div  id="info-channels"> 
                    <div class="container">
                        <div class="col-xs-10 col-xs-offset-1 col-sm-12 col-sm-offset-0">
                            <h2>CANALES DISPONIBLES</h2>
                            <p>Selecciona cual es el canal donde quieres publicar</p>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if loop.index is divisible by(2) %}
            <div class="box-channels" >
            {% else %}
            <div class="box-channels2" >
            {% endif %}
                <div class="container" >                    
                    <br>
                    <div class="col-xs-10 col-xs-offset-1 col-sm-12 col-sm-offset-0">
                        <div class="text-center">
                            <div class="col-xs-6 col-md-3 col-sm-6 hero-feature">
                                <img src="http://placehold.it/200x200">
                                <div class="caption">
                                    <h3>Cafetín</h3>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                                </div>                                
                            </div>
                            <div class="col-xs-6 col-md-3 col-sm-6 hero-feature">
                                <img src="http://placehold.it/200x200">
                                <div class="caption">
                                    <h3>Edificio de Aulas</h3>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                                </div>                    
                            </div>
                            <div class="col-xs-6 col-md-3 col-sm-6 hero-feature">
                                <img src="http://placehold.it/200x200">                        
                                <div class="caption">
                                    <h3>Biología</h3>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                                </div>                    
                            </div>
                            <div class="col-xs-6 col-md-3 col-sm-6 hero-feature">

                                <img src="http://placehold.it/200x200">
                                <div class="caption">
                                    <h3>Decanato</h3>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
                                </div>
                            </div>
                        </div>            
                    </div>
                    <br>
                </div>
            </div>
            {% set last_body_aux = loop.index %}
        {% endfor %}
    </div>

{% endblock %}

{% block footer %}
    
    {% include 'DSFacytInfrastructureBundle:Default:footer.html.twig' %}
{% endblock footer %}


{% block javascripts%}
    {% if app.environment == "dev" %}
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/bootstrap.js') }}"></script>            
    
    {% else %}
        {% javascripts
            '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/scripts.js'
            "@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/template-panel.js"

            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>

        {% endjavascripts %}
    {% endif %}
{% endblock %}