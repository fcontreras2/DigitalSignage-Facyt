{% extends "DSFacytInfrastructureBundle:Default:base.html.twig" %}

{% block title %} Destacados {% endblock %}
{% block stylesheets %}
{% if app.environment == "dev" %}
<link rel="stylesheet" href="{{ asset('bundles/dsfacytinfrastructure/assets/DSFacyt/stylesheets/template.css') }}"/>
{% else %}
{% stylesheets
 '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/css/template.css'
 %}
 <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

 {% endstylesheets %}
 {% endif %}

 {% endblock %}
 
{% block body %}
{% include 'DSFacytInfrastructureBundle:Default:header.html.twig' %}
<div class="body-importants" style="min-height:100vh">
>
	<div class="container">
        <div class="row">
            <div class="col-xs-12">
                <br>
                <h2 id="title-page"><b>Destacados</b></h2>
                <h2 id="sub-title-page"> Información destacada <br><br>
                </h2>
            </div>
        </div>
    </div>
    <div id="box-texts">
        <div class="container" >
            <div class="row">
            <div class="col-xs-12" id="box-texts-aux">
                <div class="row">
                <div class="col-xs-10 col-xs-offset-1">
                <h3 class="title">Textos destacados</h3>
                <br>
                    <div class="row">
                    {% for currentText in data.texts %}
                    <a href="{{ path('ds_facyt_infrastructure_get_importants',{'type':'text', 'id': currentText.id})}}">
                            <div class="col-xs-12 col-md-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4>{{currentText.title}}</h4>
                                </div>
                                <div class="panel-body" style="max-height:160px;min-height:160px;">
                                    <p style="font-size:16px;">
                                        {{currentText.info}}
                                        <br>
                                        <br>                                        
                                    </p>
                                </div>
                                <div class="panel-footer" style="min-height:78px">
                                    <b>
                                        Publicado: {{currentText.start_date}}<br>
                                        Publicado por: {{currentText.user_full_name}}
                                    </b>
                                </div>
                            </div>
                            </div>
                            </a>
                        {% endfor %}
                    </div>                    
                </div>
                <br>
            </div>
        </div>
    </div>
    </div>
    </div>
    <div id="box-images">
        <div class="container" >
            <div class="row">
                <div class="col-xs-12" id="box-images-aux">
                    <div class="row">
                        <div class="col-xs-10 col-xs-offset-1">
                            <h3 class="title">Imágenes destacados</h3>
                            <br>
                            <div class="row">
                            
                                {% for currentImage in data.images %}
                                <a href="{{ path('ds_facyt_infrastructure_get_importants',{'type':'image', 'id': currentImage.id})}}">
                                <div class="col-xs-12 col-md-4">
                                    <div class="panel panel-default panel-important">
                                    <div class="panel-body" style="max-height:160px;min-height:160px;">
                                        <img src="/uploads/images/{{currentImage.image_url}}" >
                                    </div>
                                    <div class="panel-footer" >
                                        <b>
                                        <b>
                                            Publicado: {{currentImage.start_date}} <br>
                                            Publicado por: {{currentImage.user_full_name}}
                                            </b>
                                        </b>
                                    </div>
                                </div>
                            </div>
                            </a>
                            {% endfor %}
                        </div>                        
                        </div>
                        <br>
                    </div>
                </div>
            </div>
            </div>
        </div>

<div id="box-videos">
    <div class="container" >
        <div class="row">
            <div class="col-xs-12" id="box-videos-aux">
                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1">
                        <h3 class="title">Videos destacados</h3>
                        <br>
                        <div class="row">
                            {% for currentVideo in data.videos %}
                            <a href="{{ path('ds_facyt_infrastructure_get_importants',{'type':'video', 'id': currentVideo.id})}}">
                            <div class="col-xs-12 col-md-4">
                                <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4>{{currentVideo.title}}</h4>
                                </div>
                                <div class="panel-body" style="max-height:160px;min-height:160px;">
                                    <p style="font-size:16px;">
                                        
                                        <br>
                                        <br>                                        
                                    </p>
                                </div>
                                <div class="panel-footer" style="min-height:78px">
                                    <b>
                                        {{currentVideo.start_date}}<br>
                                        Publicado por {{currentVideo.user_full_name}}
                                    </b>
                                </div>
                            </div>
                        </div>
                        </a>
                        {% endfor %}
                    </div>
                    </div>
                    <br>
                </div>
            </div>
        </div>

</div>
{% endblock body %}

{% block footer %}
    {% include 'DSFacytInfrastructureBundle:Default:footer.html.twig' %}
{% endblock footer %}