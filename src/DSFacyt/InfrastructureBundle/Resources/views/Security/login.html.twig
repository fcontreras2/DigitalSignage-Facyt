{% extends "DSFacytInfrastructureBundle:Security:layout.html.twig" %}

{% block fos_user_content %}
{% include 'DSFacytInfrastructureBundle:Default:header.html.twig' %}
<div class="container" style="margin-top:10%;height:100vh">
    <!--
    <div class="row" style="margin-top:-50px;color:white"> 
        <div class="col-xs-10 col-xs-offset-1 col-sm-12 col-sm-offset-0">
            <h2>CANALES DISPONIBLES</h2>
            <p>Selecciona cual es el canal donde quieres publicar</p>    
        </div>
    </div>-->
    <div class="row">

        
        <div class="col-md-7" style="color:white">
            <h1><b>Bienvenido</b></h1>
            <h3> 
                <i class="fa fa-check"></i> Ingresa tu nombre de usuario y contraseña.<br><br>

                <i class="fa fa-check"></i> Gestiona tus publicaciones<br><br>

                <i class="fa fa-check"></i> ¿No tienes cuenta? <a href="{{path('ds_facyt_infrastructure_register')}}"><b>Registrate</b></a><br><br>
                <i class="fa fa-check"></i> ¿Olvidaste tu contraseña? <a href="{{path('ds_facyt_infrastructure_register')}}"><b>Recordar contraseña</b></a><br>
            </h3>
        </div>
        <div class="col-md-5">
            
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            Menu administrativo<br>
            <a href="{{ path('fos_user_security_logout') }}">
                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
            </a>
            {% else %}
            <form action="{{ path("ds_facyt_infrastructure_user_security_check") }}" class="form-signin" role="form" method="post">
                <div class="panel panel-default" id="panel-login">
                    <div class="panel-heading" ><b>INICIAR SESIÓN</b></div>
                    <div class="panel-content">
                    
                        <div class="tab-pane active panel-body" id="login">
                        {% if error %}
                        <span style="color:#DB2929">
                            <span class="fa fa-warning"></span> Datos incorrectos
                        </span>
                        <br>
                        <br>
                    {% endif %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <label ><span class="fa fa-user"></span> Nombre de Usuario</label>
                            <input type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="Introduce tu Nombre de Usuario">
                            <br>
                            <label><span class="fa fa-lock"></span> Constraseña</label>
                            <input type="password" class="form-control" name="_password" value="{{ last_username }}" placeholder="Introduce Contraseña">
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-xs-6 col-xs-offset-3 col-md-6 col-md-offset-3">
                                <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block " ><b>Ingresar</b>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            {% endif %}
        </div>
    </div>
</div>



{% endblock fos_user_content %}

{% block footer %}
{% set last_body = 1 %}
    {{ include("DSFacytInfrastructureBundle:Default:footer.html.twig") }}
{% endblock footer %}


