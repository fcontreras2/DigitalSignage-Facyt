{% extends "base.html.twig" %}

{% block stylesheets %}
    {% if app.environment == "dev" %}
        <link rel="stylesheet" href="{{ asset('bundles/dsfacytinfrastructure/assets/DSFacyt/stylesheets/template.css') }}"/>
    {% else %}

        {% stylesheets '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/css/template.css'   %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

        {% endstylesheets %}    
    {% endif %}
{% endblock %}

{% block body %}
    {% include 'DSFacytInfrastructureBundle:Default:header.html.twig' %}
    
    <div style="height:56px;background:#122644;margin-top:6%;z-index:2;width:100%;">
        <div class="container">
            <div class="row">
                <div class="col-xs-16">                
                    <button type="button" class="btn btn-default" style="margint-left:0px;margin-right:0px;height:56px;border-radius:0px;width:20%;"><h4>Publica</h4></button>
                    <button type="button" class="btn btn-default" style="margint-left:0px;margin-right:0px;height:56px;border-radius:0px;width:20%;"><h4>Programación</h4></button>
                    <button type="button" class="btn btn-default" style="margint-left:0px;margin-right:0px;height:56px;border-radius:0px;width:20%;"><h4>CanalesOnline</h4></button>
                    <button type="button" class="btn btn-default" style="margint-left:0px;margin-right:0px;height:56px;border-radius:0px;width:20%;"><h4>Descatados</h4></button>
                    <button type="button" class="btn btn-default" style="margint-left:0px;margin-right:0px;height:56px;border-radius:0px;width:18%;"><h4>Ayuda</h4></button>
                </div>
            </div>
        </div>
    </div>
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
            <li data-target="#carousel-example-generic" data-slide-to="1"></li>
            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">                
                <img src="http://www.facyt.uc.edu.ve/sites/default/files/c1.jpg" alt="..." style="width:40%;margin-left:20%">
                <div class="carousel-caption">
                </div>
            </div>
            <div class="item">
                <img src="http://portal.facyt.uc.edu.ve/investigacion/img/varias/cursoImagen2.jpg" alt="..." style="width:40%;margin-left:20%">
                <div class="carousel-caption">
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="fa fa-angle-left" aria-hidden="true" style="margin-top:90%;font-size:36px"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="fa fa-angle-right" aria-hidden="true" style="margin-top:90%;font-size:36px"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="container">
        <hr>
        <div class="row">
            <div class="col-xs-12">
                <h2>Información en la Facultad</h2>
            </div>
            <div class="col-xs-6">

                <div class="row">

                    <iiv class="col-xs-12">
                        <img src="http://scala.com/wp-content/uploads/2012/07/avans-school.jpg" alt="">
                    </iiv>
                    <div class="col-xs-12">
                        <h3> Informate en directo</h3>
                        <b>Puedes informarte de las novedades en FaCyT</b> <br>
                        Eventos, suspención de actividades, pasantias, cursos, entre otros.
                        Observa en directo nuestros canales de transmición. <a href="">Canales</a>
                    </div>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="row">
                    <div class="col-xs-12">
                        <img src="http://www.sura.com/blogs/images1/imagen-portatil-itis.jpg" alt="">
                    </div>
                    <iiv class="col-xs-12">
                        <h3> Publica contenido</h3>
                        <b>Tiene información que compartir?</b><br> Ayudanos a mantener informados a los estudiatnes, profesores y el personal de tu facultad. Publica contenido dinámicos como textos, imagenes y videos. <a href="">Publica</a>
                    </iiv>                    
                </div>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-xs-12">
                <h2>Descatados</h2>
                <h4> <span style="border-bottom: 2px solid #122644">Textos</span>  Imagenes  Videos</h4>
                <div class="row">
                    {% for item in 1..4 %}
                        <div class="col-xs-3">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                12/05/2016 - 7:00 AM
                            </div>
                            <div class="panel-body">
                                <h3>Suspención de clases</h3>
                                <p>
                                    Se suspenden las clases en la facultad, disturbios en el arco
                                    <br>
                                    <a href="">Ver mas ... </a>
                                </p>
                            </div>
                            <div class="panel-footer">
                            <b>Publicado Freddy Contreras</b>
                            </div>
                        </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    {% include 'DSFacytInfrastructureBundle:Default:footer.html.twig' %}
{% endblock footer %}


{% block javascripts%}
    {% if app.environment == "dev" %}
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/bootstrap.js') }}"></script>            
    
    {% else %}
        {% javascripts
            '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/scripts.js'
            "@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/template-panel.js"

            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>

        {% endjavascripts %}
    {% endif %}
{% endblock %}