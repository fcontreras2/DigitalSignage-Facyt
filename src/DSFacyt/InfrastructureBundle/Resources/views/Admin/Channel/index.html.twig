{% extends 'DSFacytInfrastructureBundle:Admin/Default:base.html.twig' %}

{% block title %} Canales {% endblock title %}

{% block title_notifications %} <span class="fa fa-desktop"></span>  Canales {% endblock title_notifications %}

{% block body -%}
    <h1>Canales disponibles</h1>
    <br>
    <a href="{{ path('ds_facyt_admin_channel_new') }}">
        <button type="button" class="btn btn-default"> <span class="fa fa-plus"></span> Crear nuevo</button>
    </a>
    <br><br>
    <table class="table table-hover">
        <thead>
            <tr>
                <th> # </th>
                <th>Nombre</th>
                <th>Descripci√≥n</th>
                <th>Estado</th>
                <th><span class="fa fa-pencil"></span></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ds_facyt_admin_channel_show', { 'id': entity.id }) }}">{{ loop.index }}</a></td>                
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.status }}</td>                
                <td>
                    <a href="{{ path('ds_facyt_admin_channel_edit', { 'id': entity.id }) }}"> Editar</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>    
        
    {% endblock %}

    {% block javascripts %}
    {{ parent() }}

    {% if app.environment == "dev" %}
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/bootstrap.js') }}"></script>        
    {% else %}
        {% javascripts
            '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/scripts.js'                   
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>

        {% endjavascripts %}
    {% endif %}   

{% endblock javascripts %}

