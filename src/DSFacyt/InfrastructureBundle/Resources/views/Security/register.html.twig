{% extends "DSFacytInfrastructureBundle:Security:layout.html.twig" %}

{% block title %} Registrate {% endblock title %}
{% block fos_user_content %}
{% include 'DSFacytInfrastructureBundle:Default:header.html.twig' %}

<div class="container" style="margin-top:10%;min-height:100vh">
    <div class="row">
        <div class="col-md-5" style="color:white">
            <h2><b>¿Quieres publicar?</b></h2>
            
            <h3> 
                <i class="fa fa-check"></i> Ingresa tus datos.<br><br>

                <i class="fa fa-check"></i> Podrás realizar publicaciones en los distintos canales.<br><br>

                <i class="fa fa-check"></i> Gestiona tu contenido publicado.<br><br>

                <i class="fa fa-check"></i> Ayudanos a compartir contenido informativo en tu facultad.
            </h3>
        </div>
        <div class=" col-md-7">
            <div class="panel panel-default">            
                <div class="panel-heading"> <h4>Introduce tus datos</h4></div>
                {{ form_start(form ,{attr: {novalidate: 'novalidate'}}) }}
                <div class="panel-content">                                    

                    <div class="tab-pane active panel-body" id="login">

                        <div class="form-group col-xs-6">                            
                            *{{ form_label(form.name, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="form-group col-xs-6">                            
                            *{{ form_label(form.last_name, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.last_name) }}
                        </div>

                        <div class="form-group col-xs-6">                            
                            *{{ form_label(form.indentity_card, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.indentity_card, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.indentity_card) }}
                        </div>

                        <div class="form-group col-xs-6">
                            *{{ form_label(form.username, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.username) }}
                        </div>

                        <div class="form-group col-xs-6">
                            *{{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <div class="form-group col-xs-6">
                            *{{ form_label(form.password, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password) }}
                        </div>                          

                        <div class="form-group col-xs-6">
                            *{{ form_label(form.phone, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.phone) }}
                        </div>

                        <div class="form-group col-xs-6">
                            *{{ form_errors(form.school) }}
                            {{ form_label(form.school, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.school, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-xs-12">
                            <b style="font-style:italic">*Campos obligatorios</b>
                        </div>
                    </div>
                    
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-xs-6 col-xs-offset-3 col-md-4 col-md-offset-4 ">
                            <div class="control-label required">&nbsp;</div>
                            <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block" >Registrarte</button>
                        </div>
                    </div>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}               
            </div>
        </div>
    </div>
</div>

{% endblock fos_user_content %}

{% block footer %}
{{ include("DSFacytInfrastructureBundle:Default:footer.html.twig") }}
{% endblock footer %}
    