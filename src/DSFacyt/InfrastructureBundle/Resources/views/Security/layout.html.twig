{% extends "DSFacytInfrastructureBundle:Default:base.html.twig" %}

{% block stylesheets %}
    {% if app.environment == "dev" %}   

        {% stylesheets '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/stylesheets/screen.css' filter='?yui_css'  %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

        {% endstylesheets %}    
    {% endif %}   
{% endblock %}


{% block body%}
    
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
        <a href="{{ path('ds_facyt_infrastructure_security_logout') }}">
            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
        </a>
    {% else %}
        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
    {% endif %}
    

    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            <div class="{{ type }}">
                {{ message|trans({}, 'FOSUserBundle') }}
            </div>
        {% endfor %}
    {% endfor %}    

    {% block fos_user_content %}
    {% endblock fos_user_content %}
    
{% endblock %}

{% block javascripts%}
    {% javascripts         
        '@DSFacytInfrastructureBundle/Resources/public/assets/vendor/js/jquery.js' 
        '@DSFacytInfrastructureBundle/Resources/public/assets/vendor/js/bootstrap.js'
    filter='?yui_js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}
    <script>
       $(function () {
    $('.tabs a:last').tab('show')
  });
    </script>
{% endblock %}