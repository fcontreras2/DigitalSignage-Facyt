{% extends "DSFacytInfrastructureBundle:Display:base.html.twig" %}

{% block stylesheets %}
    {% if app.environment == "dev" %}
        <link rel="stylesheet" href="{{ asset('bundles/dsfacytinfrastructure/assets/DSFacyt/stylesheets/display.css') }}"/>
    {% else %}
        {% stylesheets
        '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/css/template.css'
        %}
        <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

        {% endstylesheets %}
    {% endif %}

{% endblock %}

{% block body %}
    <div class="container-display" style="height: 100vh !important;width: 100%;background: blue" >
        <div class="block-media" style="background:green;height: 93vh;width: 64.9%;float: left;border-right: 1px solid black;position: relative">a</div>
        <div class="block-info" style="background: yellow;height: 93vh;width: 35%;float: left">
            <div class="block-info" style="height: 20vh;border-bottom: 1px solid black;">
                <div class="block-time" style="margin: 10px">
                    <div class="time" style="font-size: 200%">
                        07:00 AM
                    </div>
                    <div class="date" style="font-size: 200%">
                        Mar, 10 Abril
                    </div>
                </div>
            </div>
            <div class="block-text" style="height: 80vh">
                {% for i in 1..3 %}
                    <div class="panel panel-default" style="height: 25.0vh !important;border-bottom: 1px solid black;margin: 0px">
                        <div class="panel-heading">
                            <b>Suspención de clases</b> <span style="float: right"> 10:10:20</span>
                        </div>
                    	<div class="panel-body" style="font-size: 120%">
                            Se cambia la fecha del parcial de Algoritmos 2 para el día 12/03/2017
                    	</div>
                    </div>

                {% endfor %}
            </div>
        </div>
        <div class="block-info" style="background: black;height: 7vh;width: 100%;float: left;color: white;font-size: 20px">
            <span style="padding: 10px;">Aqui estará el conjunto de textos que te mostraran el conjunto de presentacioens donde nose que colocar :D</span>
        </div>
    </div>
{% endblock body %}