{% extends "base.html.twig" %}

{% block title %} Facyt - Señalización Digital {% endblock title %}

{% block stylesheets %}
    {% if app.environment == "dev" %}
        <link rel="stylesheet" href="{{ asset('bundles/dsfacytinfrastructure/assets/DSFacyt/stylesheets/template.css') }}"/>
    {% else %}

        {% stylesheets '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/css/template.css'   %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

        {% endstylesheets %}    
    {% endif %}
{% endblock %}

{% block body %}
    {% include 'DSFacytInfrastructureBundle:Default:header.html.twig' %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <ul class="nav nav-tabs nav-justified" style="margin-top:7.4%;z-index:2;width:100%;">
                    <li>
                        <a href="#1" data-toggle="tab">
                            <i class="fa fa-list"></i> Publicar
                        </a>
                    </li>
                    <li>
                        <a href="#2" data-toggle="tab">
                            <i class="fa fa-desktop"></i> Canales Online
                        </a>
                    </li>
                    <li>
                        <a href="#2" data-toggle="tab">
                            <i class="fa fa-star"></i> Destacados
                        </a>
                    </li>
                    <li>
                        <a href="#2" data-toggle="tab">
                            <i class="fa fa-question-circle"></i> Ayuda
                        </a>
                    </li>
                </ul>        
            </div>
        </div>
    </div>
    <div id="carousel-example-generic" class="carousel slide carousel-fade" data-ride="carousel">
          <!-- Indicators -->        
    
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">                
                    <img src="http://www.facyt.uc.edu.ve/sites/default/files/c1.jpg" alt="..." style="width:40%;margin-left:20%;max-height:340px;">                    
                </div>
                <div class="item">                    
                    <img src="http://portal.facyt.uc.edu.ve/investigacion/img/varias/cursoImagen2.jpg" alt="..." style="width:40%;margin-left:20%;max-height:340px;">
                    
                </div>
            </div>
    
            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="fa fa-angle-left" aria-hidden="true" style="margin-top:90%;font-size:36px"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="fa fa-angle-right" aria-hidden="true" style="margin-top:90%;font-size:36px"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div style="background:#e2e2e2">
            <div class="container">        
                <div class="row">
                    <div class="col-xs-12">
                        <h2 style="color:#63a047; "> ¡Conoce la facultad!</h2>
                        <img src="http://entornovirtual.facyt.uc.edu.ve/pluginfile.php/1/theme_bcu/p1/1447361441/slide_ciencia-y-tecnologia%2B.jpg" width="100%">
                    </div>
                </div>
                <br>
                <div class="row">
                    <div class="col-xs-5 col-xs-offset-1">
                        <span class="fa-stack fa-lg" style="font-size:30px">
                          <i class="fa fa-circle fa-stack-2x" style="color:#122644;"></i>
                          <i class="fa fa-desktop fa-stack-1x fa-inverse"></i>
                        </span>                        
                        <h3 style="color:#63a047;font-weight:bold;">Informate en directo</h3>
                        <h4 style="color:#18304c;font-weight:bold;">Informarte de las novedades</h4>
                        <h4>
                            Puedes informarte de las novedades en FaCyT<br>
                            Eventos, suspensión de las actividades, pasantias,<br>
                            cursos, entre otros. Observa en directo <br>
                            los canales de transmisión.<br>                        
                        </h4>
                        <h4><a href="#" style="color:#18304c;font-weight:bold;">Canales</a></h4>
                    </div>
                    <div class="col-xs-5 ">
                        <span class="fa-stack fa-lg" style="font-size:30px">
                          <i class="fa fa-circle fa-stack-2x" style="color:#122644;"></i>
                          <i class="fa fa-bullhorn fa-stack-1x fa-inverse"></i>
                        </span>                        
                        <h3 style="color:#63a047;font-weight:bold;">Publica contenido</h3>
                        <h4 style="color:#18304c;font-weight:bold;">¿Tienes información que compartir?</h4>
                        <h4>
                            Ayudanos a mantener informados  a los<br>
                            estudiantes, profesores y personal de <br>
                            tu facultad. Publica contenido dinámicos <br>
                            como textos, imágenes y videos. <br>
                        </h4>
                        <h4><a href="#" style="color:#18304c;font-weight:bold;">Publicar</a></h4>
                    </div>
                </div>        
            </div>
            <br>
        </div>
        <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2 style="color:#63a047; "> Destacados</h2>
                <h4 style="color:#18304c">Publicaciones destacadas en la semana</h4>
                <div class="row">
                    {% for item in 1..4 %}
                        <div class="col-xs-3">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4>Suspensión de clases</h4>
                            </div>
                            <div class="panel-body">
                                <h3>Suspención de clases</h3>
                                <p>
                                    Se suspenden las clases en la facultad, disturbios en el arco
                                    <br>
                                    <a href=""> <span class="fa fa-circle"> </span> Ver publicación </a>
                                </p>
                            </div>
                            <div class="panel-footer">
                                <b>
                                    12/05/2017 - 7:00 AM <br>
                                    Publicado Freddy Contreras
                                </b>
                            </div>
                        </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer %}
    {% include 'DSFacytInfrastructureBundle:Default:footer.html.twig' %}
{% endblock footer %}


{% block javascripts%}
    {% if app.environment == "dev" %}
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/bootstrap.js') }}"></script>            
    
    {% else %}
        {% javascripts
            '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/scripts.js'
            "@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/template-panel.js"

            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>

        {% endjavascripts %}
    {% endif %}
{% endblock %}