{% extends "base.html.twig" %}
{% block title %} Nuevo/Editar Texto {% endblock title%}
{% block stylesheets %}
     {% if app.environment == "dev" %}
        <link rel="stylesheet" href="{{ asset('bundles/dsfacytinfrastructure/assets/DSFacyt/stylesheets/template.css') }}"/>
        <link rel="stylesheet" href="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/css/bootstrap-datepicker.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/css/timepicker.css') }}"/> 
        
    {% else %}
       {% stylesheets
       '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/css/template.css'
       '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/css/datepicker.css'
       %}
       <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

       {% endstylesheets %}
    {% endif %}

{% endblock stylesheets %}

{% block body %}
    {% include 'DSFacytInfrastructureBundle:User:header.html.twig' %}

    <div id="body-user" style="min-height: 311px;">
    <div class="container" >
        <div class="row">
            <div class="col-lg-12" id="box-title" >
                <br>
                <h1>  <span class="fa fa-pencil"></span> Agregar Texto</h1>
                <h4> Ingresa los datos de tu texto a publicar</h4>
                <br>
                <br>
            </div>
        </div>
        
        <div class="row">
            <div class="col-xs-12 col-md-8 col-md-offset-2" ng-app="UploadTextModule" ng-controller="UploadTextController">
                <div class="panel panel-default">
                    <form name="setText">
                    <div class="panel-heading"> <h5>INGRESA LOS DATOS DE LA PUBLICACIÓN</h5></div>
                    <div class="panel-body">                        
                        <div class="row">
                            <div class="col-xs-10 col-xs-offset-1 ">
                                <label class="control-label">* Título</label> <span class="error" ng-show="setText.title.$invalid && !setText.title.$pristine" ng-cloak> de 10 a 30 caracteres</span>
                                <input type="text" name="title" id="input" class="form-control" ng-model="data.title" autofocus ng-required="true" ng-minlength="10" ng-maxlength="30">                                
                                <br>
                            </div>
                            <div class="col-xs-10 col-xs-offset-1">
                                <div class="row ">
                                    <div class="col-xs-12 col-md-4">
                                        <label class="control-label">* Hora de publicación </label>
                                        <div class="input-group bootstrap-timepicker timepicker">
                                            <input type="text" name="publish_time"  class="form-control  input-small" id="registerImage_publish_time" ng-model="data.publish_time" ng-required="true">
                                            <span class="input-group-addon"><i class="fa fa-clock-o"></i></span>                                            
                                        </div>                                        
                                        <span class="error" ng-show="setText.publish_time.$invalid" ng-cloak>*hora obligatoria</span>
                                    </div>
                                    <div class="col-xs-12 col-md-4">
                                        <label class="control-label">* Fecha inicial </label>
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input type="text" name="start_date" id="input" class="form-control" ng-model="data.start_date" ng-required="true">                                            
                                        </div>
                                        <span class="error" ng-show="setText.start_date.$invalid && !setText.start_date.$pristine">*fecha inicial obligatoria</span>
                                    </div>
                                    <div class="col-xs-12 col-md-4">
                                        <label class="control-label">* Fecha final </label>
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input type="text" name="end_date" id="input" class="form-control" ng-model="data.end_date">
                                        </div>
                                        <span class="error" ng-show="setText.end_date.$invalid && !setText.end_date.$pristine" ng-cloak>*fecha final obligatoria</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-10 col-xs-offset-1" id="register_text_checkbox">
                                <br>
                                <label class="control-label">Canales a publicar </label>
                                <div class="checkbox" >
                                    <label ng-repeat="(key, value) in data.channels">
                                        <input type="checkbox" value="{[{value.id}]}" ng-model="data.channels[key].value">
                                        {[{value.name}]}
                                    </label>
                                </div>
                                <br>
                            </div>
                            <div class="col-xs-10 col-xs-offset-1">
                                <label class="control-label">* Información </label>
                                <div class="pull-right">
                                     <span ng-show="!data.info">Líminte de caracteres es 144</span>
                                     <span ng-show="data.info.length != 0 && data.info.length <= 144">{[{data.info.length}]}/144</span>
                                </div>
                                <textarea name="info" id="input" class="form-control" ng-model="data.info" ng-required="true" ng-maxlength="144"> </textarea>
                                <span class="error" ng-show="setText.info.$invalid && !setText.info.$pristine" ng-cloak>*información obligatoria</span>
                            </div>
                            <div class="col-xs-10 col-xs-offset-1">
                                <br>
                                <span class="not-blank">* Campos obligatorios</span>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <div class="row">
                            <div class="col-xs-6 col-xs-offset-3 col-md-6 col-md-offset-3">
                                <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block " ng-click="setData()" ng-disabled="setText.$invalid"><b>Publicar</b>
                            </button>
                        </div>
                    </div>                    
                    </form>
                </div>
            </div>
        </div>
        </div>
    </div>
 
{% endblock body %}

{% block footer %}
    {% include 'DSFacytInfrastructureBundle:Default:footer.html.twig' %}
{% endblock footer %}

{% block javascripts%}

    <!-- Tomando variables enviadas desde el servidor -->
    <script type="text/javascript">
        var data = "{{ data }}";
        var div = document.createElement('div');
        div.innerHTML = data;
        data = div.firstChild.nodeValue;
        //console.log( div.firstChild.nodeValue);
        data = JSON.parse(data);
    </script>

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

    {% if app.environment == "dev" %}

        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/bootstrap.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/angular.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/bootstrap-datepicker.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/bootstrap-datepicker.es.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/bootstrap-timepicker.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/DSFacyt/angular/Text/UploadTextModule.js') }}"></script>
        <script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/DSFacyt/angular/Text/UploadTextController.js') }}"></script>

    {% else %}

        {% javascripts
        '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/scripts.js'
        "@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/angular-strap.js"
        "@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/app-panel-user.js"
        "@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/bootstrap-datepicker.js"
        %}
        <script type="text/javascript" src="{{ asset_url }}"></script>

        {% endjavascripts %}
    {% endif %}

    <script type="text/javascript">
        $('.input-group.date').datepicker({
            language: "es",
            format: 'dd/mm/yyyy',
            startDate: '-3d',
        });
    </script>
    <script type="text/javascript">
        $('#registerText_publish_time').timepicker(
        {
            defaultTime: '7:00 AM',
            icons: {
                up: 'fa fa-chevron-up',
                down: 'fa fa-chevron-down'
            }
        });
    </script>
{% endblock %}