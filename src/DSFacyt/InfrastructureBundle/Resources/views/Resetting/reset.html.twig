{% extends "DSFacytInfrastructureBundle:Resetting:layoutResetting.html.twig" %}
{% block title %} Restablecer contraseña {% endblock %}
{% block body %}

<div id="body-login">
    <div class="container" style="height:100vh;padding-top:7%">
        <div class="row">        
            <div class="col-md-7" >
                <h1 id="login-title"><b>Restablecer contraseña</b></h1>
                <h3 id="login-info">
                    <i class="fa fa-check"></i> Ingrasa tu nueva contraseña<br><br>
                    <i class="fa fa-check"></i> Confirma contraseña<br><br>                  
                    <i class="fa fa-check"></i> <a href="{{path('ds_facyt_infrastructure_user_security_login')}}">Iniciar sesión </a><br>
                </h3>
            </div>
            <div class="col-md-5">
                <form action="{{ path('ds_facyt_infrastructure_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="form-out">
                    <div class="panel panel-default" id="panel-login">
                        <div class="panel-heading" ><b><h4>Restablecer contraseña</h4></b></div>
                        <div class="panel-content">                        
                            <div class="tab-pane active panel-body" id="login">
                                  {% for errorItem in form.plainPassword.first.vars.errors %}
                                    <div class="alert alert-danger">
                                        <span class="fa fa-exclamation-triangle" aria-hidden="true"></span>
                                        <span class="sr-only">Error:</span>
                                        <span>  {{ errorItem.message|trans }}</span>
                                    </div>
                                {% endfor %}
                                <label ><span class="fa fa-lock"></span> Nueva contraseña</label>
                                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control my-input', 'placeholder': 'Contraseña nueva'}}) }}
                                <br>
                                <label ><span class="fa fa-lock"></span> Repetir contraseña</label>
                                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control my-input', 'placeholder': 'Repetir contraseña'}}) }}
                            </div>
                        </div>
                        <div class="panel-footer">
                            <div class="row">
                                <div class="col-xs-6 col-xs-offset-3 col-md-6 col-md-offset-3">
                                    <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block " ><b>Ingresar</b>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_rest(form)}}
                </form>    
            </div>
        </div>
    </div>
</div>
{% endblock body %}