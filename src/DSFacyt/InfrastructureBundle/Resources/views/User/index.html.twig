{% extends "base.html.twig" %}

{% block stylesheets %}
{% if app.environment == "dev" %}
<link rel="stylesheet" href="{{ asset('bundles/dsfacytinfrastructure/assets/DSFacyt/stylesheets/screen.css') }}"/>
{% else %}
{% stylesheets
 '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/css/screen.css'
 '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/css/template-panel.css'

 %}
 <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />

 {% endstylesheets %}
 {% endif %}

 {% endblock %}

 {% block body %}

 {% include 'DSFacytInfrastructureBundle:User:header.html.twig' %}
 <div id="body-user">
    <div class="container" >
        <br>
        <div class="col-lg-12" style="color:white">

            <h1>  <span class="fa fa-dashboard"></span> Panel de Usuario</h1>
        </div>
        
        <div class="col-xs-5 col-xs-offset-1">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-pencil fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ data.texts }}</div>
                            <div>Textos Rapidos</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <a href="{{ path('ds_facyt_infrastructure_user_text_homepage') }}">
                            <span class="pull-left">Ver Textos</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </a>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-xs-5 ">
            <div class="panel panel-green">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-image fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ data.images }}</div>
                            <div>Imagenes</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <a href="{{ path('ds_facyt_infrastructure_user_image_homepage') }}">
                            <span class="pull-left">Ver Imagenes</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </a>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-xs-5 col-xs-offset-1">
            <div class="panel panel-yellow">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-video-camera fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">{{ data.videos }}</div>
                            <div>Videos</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <a href="{{ path('ds_facyt_infrastructure_user_video_homepage') }}">
                            <span class="pull-left">Ver tus videos</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </a>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-xs-5 ">
            <div class="panel panel-red">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-user fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">13</div>
                            <div>Perfil</div>
                        </div>
                    </div>
                </div>
                <a href="#">
                    <div class="panel-footer">
                        <span class="pull-left">Ver perfil</span>
                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>
    </div>    
</div>
</div>  
{% endblock %}


{% block footer %}
{% include 'DSFacytInfrastructureBundle:Default:footer.html.twig' %}
{% endblock footer %}

{% block javascripts%}
{% if app.environment == "dev" %}
<script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/jquery.js') }}"></script>
<script type="text/javascript" src="{{ asset('bundles/dsfacytinfrastructure/assets/vendor/js/bootstrap.js') }}"></script>            
{% else %}
{% javascripts
    '@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/scripts.js'
    "@DSFacytInfrastructureBundle/Resources/public/assets/DSFacyt/dist/js/template-panel.js"

    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>

    {% endjavascripts %}
    {% endif %}
    {% endblock %}