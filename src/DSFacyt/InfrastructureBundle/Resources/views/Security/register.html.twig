{% extends "DSFacytInfrastructureBundle:Security:layout.html.twig" %}

{% block fos_user_content %}
{% include 'DSFacytInfrastructureBundle:Default:header.html.twig' %}
<div class="container" style="margin-top:10%;height:100vh">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2">
            <div class="panel panel-default">            
                <div class="panel-heading"> <h4>INTRODUCE TUS DATOS</h4></div>
                {{ form_start(form ,{attr: {novalidate: 'novalidate'}}) }}
                <div class="panel-content">                                    

                    <div class="tab-pane active panel-body" id="login">

                        <div class="form-group col-xs-6">
                            {{ form_errors(form.name) }}
                            {{ form_label(form.name, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group col-xs-6">
                            {{ form_errors(form.last_name) }}
                            {{ form_label(form.last_name, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.last_name, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group col-xs-6">
                            {{ form_errors(form.indentity_card) }}
                            {{ form_label(form.indentity_card, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.indentity_card, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group col-xs-6">
                            {{ form_errors(form.username) }}
                            {{ form_label(form.username, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group col-xs-6">
                            {{ form_errors(form.email) }}
                            {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group col-xs-6">
                            {{ form_errors(form.password) }}
                            {{ form_label(form.password, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                        </div>                          

                        <div class="form-group col-xs-6">
                            {{ form_errors(form.phone) }}
                            {{ form_label(form.phone, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-group col-xs-6">
                            {{ form_errors(form.school) }}
                            {{ form_label(form.school, null, {'label_attr': {'class': 'control-label'}}) }}
                            {{ form_widget(form.school, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <div class="control-label required">&nbsp;</div>
                            <button type="submit" id="_submit" name="_submit" class="btn btn-sm btn-primary btn-block" >Registrarse</button>
                        </div>
                    </div>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}               
            </div>
        </div>
    </div>
</div>

{% endblock fos_user_content %}

{% block footer %}
{{ include("DSFacytInfrastructureBundle:Default:footer.html.twig") }}
{% endblock footer %}
    