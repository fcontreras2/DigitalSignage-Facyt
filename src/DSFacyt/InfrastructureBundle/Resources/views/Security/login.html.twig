{% extends "DSFacytInfrastructureBundle:Security:layout.html.twig" %}

{% block fos_user_content %}
{% include 'DSFacytInfrastructureBundle:Default:header.html.twig' %}
<div class="container" style="margin-top:10%;">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4">

            {% if error %}
            ... {{ error.messageKey|trans(error.messageData, 'security') }} ...
            {% endif %}
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                Menu administrativo<br>
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
           
            <div class="panel panel-default">            
                <div class="panel-content">
                    <form action="{{ path("ds_facyt_infrastructure_security_check") }}" class="form-signin" role="form" method="post">
                        <div class="tab-pane active panel-body" id="login">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />            
                            <div class="form-group">
                                <label >Nombre de Usuario</label>
                                <input type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="Introduce tu Nombre de Usuario">
                            </div>
                            
                            <div class="form-group">
                                <label >Constraseña</label>
                                <input type="password" class="form-control" name="_password" value="{{ last_username }}" placeholder="Introduce Contraseña">
                            </div>
                            
                            <button type="submit" id="_submit" name="_submit" class="btn btn-lg btn-primary btn-block" >Iniciar Sesión</button>
                            </h5>
                        </div>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
</div>

{% endblock fos_user_content %}
