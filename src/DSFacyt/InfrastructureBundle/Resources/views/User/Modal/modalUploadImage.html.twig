<script id="modal-uploadImage.tpl" type="text/ng-template">
    <div class="modal" tabindex="-1" role="dialog" aria-hidden="true" ng-click="hideModal()">
        <div class="modal-dialog">
            <form name="form" class="css-form" novalidate>
                <div class="modal-content">
                    <div class="modal-header" >
                        <div class="row">
                            <div class="col-xs-12">
                                <button type="button" class="close" aria-label="Close" ng-click="$hide();hideModal();"><span aria-hidden="true"><span class="fa fa-close"></span></span></button>
                                <h4 class="modal-title" >
                                    <span class="fa fa-camera"></span>
                                    Recortar imagen
                                </h4>
                            </div>
                        </div>
                    </div>
                    <div class="modal-body" style="font-size:16px">
                        
                        
                            <center>
                            LÃ­mites: ancho {[{config.image_width}]}px - alto : {[{config.image_height}]}px
                            <br>
                            
                            <canvas 
                                id="canvas" 
                                width="500px"
                                height="auto"
                                image-cropper 
                                image="cropper.sourceImage" 
                                cropped-image="cropper.croppedImage" 
                                crop-width="config.image_width" 
                                crop-height="config.image_height"
                                keep-aspect="false" 
                                touch-radius="30">
                            </canvas>
                            </center>
                        
                        
                    </div>
                    <div class="modal-footer">
                        <div class="row">
                            <button class="btn btn-primary delete" ng-click="uploadFile(); $hide()">
                                <span class="fa fa-cut"></span> Recortar
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</script>